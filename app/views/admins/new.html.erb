<%= form_for @admin do |f| %>
	<% if @admin.errors.any? %>
		<h2>Form is invalid</h2>
		<ul>
			<% @admin.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :password %>
	<%= f.text_field :password %>
	<%= f.label :password_confirmation %>
	<%= f.text_field :password_confirmation %>
	<%= f.submit %>
	<% end %>